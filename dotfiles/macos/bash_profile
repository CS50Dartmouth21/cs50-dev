# If you want to customize, edit .bashrc.custom

# This file is sourced by bash in every login shell.  DO NOT EDIT.

export LOGIN_SHELL=1

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    export PATH="$HOME/bin:$PATH"
fi

if [ -f ~/.bashrc ]; then
    source ~/.bashrc
fi

# ----------------------------------------------------------------------
